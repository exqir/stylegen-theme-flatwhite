.component-preview-nav
  page-padding()


.content-group-nav-link.component-preview-nav-link
  position relative
  border-bottom none

  margin-bottom -1px

  &:after
    content ""
    display block
    position absolute
    bottom 0
    left 0
    width 100%
    z-index 100

    border-bottom 1px solid content-group-bdc
    .content-group-nav-item.active &
      border-bottom 1px solid main-contrast-bg




.component-preview-content, .component-preview-code pre
  border-top 1px solid content-group-bdc
  background-color main-contrast-bg
  page-padding()

.component-preview-content
  padding-top 2rem
  padding-bottom 2rem
  overflow hidden


.component-preview-code pre
  margin-top 0
  margin-bottom 0

.component-preview-code-copy
  display block
  position absolute
  top 0
  right 0
  padding .5rem
  background-color content-group-link-bg
  color content-group-link-c
  border 1px solid content-group-bdc
  border-bottom 0
  margin-right 1.375rem
  &:focus
    outline 0
  &:active,
  &:hover
    color content-group-link-active-c
    font-weight 600


  +above(tablet)
    margin-right 5rem

  &:before
    padding-right .5rem
